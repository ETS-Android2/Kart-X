            android:id="@+id/image_slider"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="10dp"
            app:corner_radius="5"
            app:layout_constraintTop_toBottomOf="@id/app_logo"
            app:auto_cycle="true"
            app:period="1000"
